<script type="text/javascript">
//<![CDATA[
function doCheckAll()
{
  with (document.sessions) {
    for (var i=0; i < elements.length; i++ ) {
      if (elements[i].type == 'checkbox')
        elements[i].checked = true;
    }
  }
}

function doUnCheckAll()
{
  with (document.sessions) {
    for (var i=0; i < elements.length; i++ ) {
      if (elements[i].type == 'checkbox')
        elements[i].checked = false;
    }
  }
}
//]]>
</script>
<p>&nbsp;</p>
<form name="sessions" method="post" action="{s_form_action}">
{noitems}
{sessitems}
<p>&nbsp;</p>
<div style="text-align:center;">
<input type="hidden" name="action" value="sessions"{xhtml}>
<input type="submit" name="mode"   value="{lang_save}"{xhtml}>
<input type="submit" name="mode"   value="{lang_cancel}"{xhtml}>
<input type="submit" name="mode"   value="{lang_delete}"{xhtml}>
</div>
</form>